<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <!-- Overall Testing Button -->
    <Button
        android:id="@+id/overallTestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Overall Testing"
        android:textSize="20sp"
        android:padding="16dp" />

    <!-- CPU Tests Button -->
    <Button
        android:id="@+id/cpuTestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="CPU Tests"
        android:textSize="20sp"
        android:padding="16dp" />

    <!-- Hardware Tests Button -->
    <Button
        android:id="@+id/hardwareTestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Hardware Tests"
        android:textSize="20sp"
        android:padding="16dp" />

    <!-- Memory/GPU Tests Button -->
    <Button
        android:id="@+id/memoryGpuTestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Memory/GPU Tests"
        android:textSize="20sp"
        android:padding="16dp" />

</LinearLayout>
