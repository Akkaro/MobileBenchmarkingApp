<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Bar Chart to display the last test result -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp" />

    <!-- Button for viewing test results in text format -->
    <Button
        android:id="@+id/textViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Test Results in Text" />

    <!-- Button for viewing test results in line chart format -->
    <Button
        android:id="@+id/chartViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Test Results in Line Chart" />
</LinearLayout>
